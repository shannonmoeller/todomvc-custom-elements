{
  "name": "todomvc-custom-elements",
  "private": true,
  "scripts": {
    "deploy": "npm run prod && now --public && now alias",
    "start": "NODE_ENV=production node bin/www",
    "start-dev": "NODE_ENV=development nodemon bin/www",
    "lint": "run-s lint-*",
    "lint-prettier": "prettier --write src/**/*.{js,css}",
    "lint-eslint": "eslint --fix src/**/*.js",
    "lint-stylelint": "stylelint --fix src/**/*.css",
    "test": "NODE_ENV=test nyc run-s test-*",
    "test-node": "blue-tape test/**/*.js | tap-diff",
    "precommit": "run-s lint test"
  },
  "files": [
    ".env",
    "bin",
    "src"
  ],
  "dependencies": {
    "@std/esm": "^0.12.4",
    "compression": "^1.7.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "helmet": "^3.9.0"
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-whim": "^3.0.0",
    "husky": "^0.14.3",
    "nodemon": "^1.12.1",
    "now": "^6.4.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "prettier": "^1.7.4",
    "stylelint": "^8.2.0",
    "stylelint-config-prettier": "^1.0.2",
    "stylelint-config-whim": "^3.0.0",
    "tap-diff": "^0.1.1"
  },
  "@std/esm": {
    "cjs": true,
    "esm": "js"
  },
  "now": {
    "alias": "todomvc-custom-elements"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-whim",
      "eslint-config-prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-whim",
      "stylelint-config-prettier"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "engines": {
    "node": "^8.8.1"
  }
}
