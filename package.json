{
  "name": "todomvc-custom-elements",
  "private": true,
  "scripts": {
    "deploy": "npm run prod && now --public && now alias",
    "start": "NODE_ENV=production node bin/www",
    "dev": "NODE_ENV=development gulp",
    "prod": "NODE_ENV=production gulp",
    "test": "NODE_ENV=test nyc gulp test"
  },
  "files": [
    ".env",
    "bin",
    "dist"
  ],
  "dependencies": {
    "@webcomponents/custom-elements": "^1.0.0",
    "babel-runtime": "^6.23.0",
    "compression": "^1.6.2",
    "dom4": "^1.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "morphdom": "^2.3.2",
    "reset-css": "^2.2.0",
    "tcomb": "^3.2.20"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "blue-tape": "^1.0.0",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-config-whim": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-bro": "^1.0.2",
    "gulp-eslint": "^4.0.0",
    "gulp-postcss": "^7.0.0",
    "gulp-stylelint": "^3.9.0",
    "gulp-tape": "0.0.9",
    "gulp-uglify": "^3.0.0",
    "nodemon": "^1.11.0",
    "now": "^6.4.1",
    "nyc": "^11.0.2",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "require-dir": "^0.3.2",
    "stylelint": "^7.11.0",
    "stylelint-config-whim": "^2.0.0",
    "tap-diff": "^0.1.1"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "presets": [
      "env"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "eslintConfig": {
    "extends": "eslint-config-whim"
  },
  "now": {
    "alias": "todomvc-custom-elements",
    "type": "npm",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-whim"
  },
  "engines": {
    "node": "^6.10.0"
  }
}
